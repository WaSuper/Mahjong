<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent" >
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >
        
        <Button
            android:id="@+id/dialog_dora_back"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingTop="3dp"
            android:background="@drawable/ic_lantern" />
        
        <Button
            android:id="@+id/dialog_dora_reset"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:text="@string/reset"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginLeft="50dp"
            android:paddingTop="3dp"
            android:background="@drawable/ic_lantern" />
        
        <Button
            android:id="@+id/dialog_dora_ok"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginLeft="50dp"
            android:paddingTop="3dp"
            android:background="@drawable/ic_lantern" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="80dp"
        android:orientation="horizontal" >
        
        <com.mahjong.ui.MahjongDora
            android:id="@+id/dialog_dora_out"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        app:doraIn="false" />
        
        <com.mahjong.ui.MahjongDora
            android:id="@+id/dialog_dora_in"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="20dp"
	        app:doraIn="true"
	        android:visibility="visible" />
        
    </LinearLayout>
    
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/keyboard_mahjong" />

</RelativeLayout>
