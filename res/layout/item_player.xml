<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ImageView
        android:id="@+id/player_item_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/head_none"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />
    
    <ImageView 
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:padding="12dp"
        android:src="@drawable/selector_btn_right_arrow"
        android:layout_alignParentRight="true" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/player_item_icon"
        android:orientation="vertical" >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >
            
	        <TextView
	            android:id="@+id/player_item_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="bottom"
	            android:text="name"
	            android:textColor="@color/white"
	            android:textSize="18sp" />
            
	        <ImageView
	            android:id="@+id/player_item_sex"
	            android:layout_width="10dp"
	            android:layout_height="10dp"
	            android:src="@drawable/sex_male"
	            android:layout_gravity="bottom"
	            android:layout_marginLeft="2dp"
	            android:layout_marginBottom="3dp" />
	        
        </LinearLayout>
        
         <TextView
            android:id="@+id/player_item_sign"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="sign"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:singleLine="true" />
        
    </LinearLayout>
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shadow_bottom"
        android:layout_below="@id/player_item_icon" />

</RelativeLayout>
