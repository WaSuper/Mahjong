<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView
        android:id="@+id/ranklist_item_rank"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:background="@drawable/rank_bg" />
    
    <ImageView
        android:id="@+id/ranklist_item_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/head_none"
        android:layout_toRightOf="@id/ranklist_item_rank"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp" />
    
    <ImageView 
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:padding="12dp"
        android:src="@drawable/selector_btn_right_arrow"
        android:layout_alignParentRight="true" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/ranklist_item_icon"
        android:orientation="vertical" >
        
        <TextView
	        android:id="@+id/ranklist_item_name"
	        android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
	        android:gravity="bottom"
	        android:text="name"
	        android:textColor="@color/white"
	        android:textSize="18sp" />
        
         <TextView
            android:id="@+id/ranklist_item_data"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="data"
            android:textColor="@color/white"
            android:textSize="15sp" />
        
    </LinearLayout>
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shadow_bottom"
        android:layout_below="@id/ranklist_item_icon" />

</RelativeLayout>
