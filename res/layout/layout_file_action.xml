<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_radius_white"
    android:padding="5dp" >
    
    <Button
        android:id="@+id/file_act_sort_by_letter"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/sort_by_letter"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:gravity="left"
        android:padding="3dp"
        android:background="@drawable/selector_listview" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/diver_color"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />
    
    <Button
        android:id="@+id/file_act_sort_by_date"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/sort_by_date"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:gravity="left"
        android:padding="3dp"
        android:background="@drawable/selector_listview" />
    

</LinearLayout>
