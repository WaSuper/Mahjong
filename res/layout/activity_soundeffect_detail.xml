<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_default"
    android:id="@+id/soundeffect_detail_ll_main"  >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
	    android:layout_marginTop="10dp"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_marginBottom="10dp"
        android:orientation="horizontal" >
        
        <FrameLayout    
            android:id="@+id/soundeffect_detail_iconlayout"        
	        android:layout_width="60dp"
	        android:layout_height="60dp"
	        android:layout_centerVertical="true" >
        
	        <ImageView
		        android:id="@+id/soundeffect_detail_icon_inner"
		        android:layout_width="50dp"
		        android:layout_height="50dp"       
		        android:layout_gravity="center" />            
	        
	        <ImageView
		        android:id="@+id/soundeffect_detail_icon_outer"
		        android:layout_width="60dp"
		        android:layout_height="60dp"
		        android:src="@drawable/soundbox_default"        
		        android:layout_gravity="center" />
        </FrameLayout>
	
	    <TextView
	        android:id="@+id/soundeffect_detail_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="name"
	        android:textColor="@color/white"
	        android:textSize="20sp"
	        android:layout_marginLeft="10dp"
	        android:layout_centerVertical="true"
	        android:layout_toRightOf="@id/soundeffect_detail_iconlayout" />
    
	    <ImageView
	        android:id="@+id/soundeffect_detail_close"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:src="@drawable/close"
	        android:layout_alignParentRight="true" />
        
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/player_setting_audio"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#40ffffff" >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sound_effect"
            android:textColor="@color/light_blacktext"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_btn_bottom_arrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true" />
        
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lizhi"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />
        
        <TextView
            android:id="@+id/soundeffect_detail_lizhi_dir"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="@string/click_to_select"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:gravity="center" 
            android:singleLine="true"
            android:ellipsize="middle" />
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/diver_color" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/double_lizhi"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />
        
        <TextView
            android:id="@+id/soundeffect_detail_dlizhi_dir"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="@string/click_to_select"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:gravity="center" 
            android:singleLine="true"
            android:ellipsize="middle" />
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/diver_color" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zimo"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />
        
        <TextView
            android:id="@+id/soundeffect_detail_zimo_dir"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="@string/click_to_select"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:gravity="center" 
            android:singleLine="true"
            android:ellipsize="middle" />
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/diver_color" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ronghe"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />
        
        <TextView
            android:id="@+id/soundeffect_detail_ronghe_dir"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="@string/click_to_select"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:gravity="center" 
            android:singleLine="true"
            android:ellipsize="middle" />
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/diver_color" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_top_talk"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />
        
        <TextView
            android:id="@+id/soundeffect_detail_gametop_dir"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="@string/click_to_select"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:gravity="center" 
            android:singleLine="true"
            android:ellipsize="middle" />
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/diver_color" />
    
</LinearLayout>
