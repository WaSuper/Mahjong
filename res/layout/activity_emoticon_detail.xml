<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_default" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
	    android:layout_marginTop="10dp"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_marginBottom="10dp"
        android:orientation="horizontal" >
        
        <ImageView
	        android:id="@+id/emoticon_detail_icon"
	        android:layout_width="60dp"
	        android:layout_height="60dp"
	        android:src="@drawable/emo_0_1"        
	        android:background="@drawable/folder_bg"
	        android:layout_centerVertical="true" />
	
	    <TextView
	        android:id="@+id/emoticon_detail_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="name"
	        android:textColor="@color/white"
	        android:textSize="20sp"
	        android:layout_marginLeft="10dp"
	        android:layout_centerVertical="true"
	        android:layout_toRightOf="@id/emoticon_detail_icon" />
    
	    <ImageView
	        android:id="@+id/emoticon_detail_close"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:src="@drawable/close"
	        android:layout_alignParentRight="true" />
        
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="@string/one"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@color/main" />
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="@string/two"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@color/main"
            android:layout_marginLeft="15dp" />
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="@string/three"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@color/main"
            android:layout_marginLeft="15dp" />
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="@string/four"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@color/main"
            android:layout_marginLeft="15dp" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >
        
        <ImageView
	        android:id="@+id/emoticon_detail_add1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/add_icon"
            android:scaleType="fitCenter" />
        
        <ImageView
	        android:id="@+id/emoticon_detail_add2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/add_icon"
            android:scaleType="fitCenter"
            android:layout_marginLeft="15dp" />
        
        <ImageView
	        android:id="@+id/emoticon_detail_add3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/add_icon"
            android:scaleType="fitCenter"
            android:layout_marginLeft="15dp" />
        
        <ImageView
	        android:id="@+id/emoticon_detail_add4"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/add_icon"
            android:scaleType="fitCenter"
            android:layout_marginLeft="15dp" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >        
        
        <ListView
	        android:id="@+id/emoticon_detail_list1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
	        android:cacheColorHint="@android:color/transparent"
	        android:divider="@null"
	        android:listSelector="@drawable/selector_listview" />   
        
        <ListView
	        android:id="@+id/emoticon_detail_list2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
	        android:cacheColorHint="@android:color/transparent"
	        android:divider="@null"
	        android:listSelector="@drawable/selector_listview" />   
        
        <ListView
	        android:id="@+id/emoticon_detail_list3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
	        android:cacheColorHint="@android:color/transparent"
	        android:divider="@null"
	        android:listSelector="@drawable/selector_listview" />   
        
        <ListView
	        android:id="@+id/emoticon_detail_list4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
	        android:cacheColorHint="@android:color/transparent"
	        android:divider="@null"
	        android:listSelector="@drawable/selector_listview" />            
        
    </LinearLayout>
    
</LinearLayout>
