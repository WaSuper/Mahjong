            android:layout_weight="1"
            android:text="-5"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_btn_blue_bg" />
        
    </LinearLayout>
    
    <TextView
