	                        android:textColor="@color/white"
	                        android:textSize="16sp"
	                        android:layout_alignParentRight="true" />
	                    
	                </RelativeLayout>
	                
	                
	                <RelativeLayout
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginTop="10dp" >
	                    
	                    <TextView
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="@string/average_hepai"
	                        android:textColor="@color/white"
	                        android:textSize="16sp" />
	                    
	                    <TextView
	                        android:id="@+id/rank_detail_average_hepai"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="0"
	                        android:textColor="@color/white"
	                        android:textSize="16sp"
	                        android:layout_alignParentRight="true" />
	                    
	                </RelativeLayout>
	                
	            </LinearLayout>
	            
	            <LinearLayout
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:orientation="vertical"
	                android:layout_marginLeft="40dp" >
	                
	                <RelativeLayout
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content" >
	                    
	                    <TextView
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="@string/rank_point_data"
	                        android:textColor="@color/white"
	                        android:textSize="16sp" />
	                    
	                    <TextView
	                        android:id="@+id/rank_detail_point"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="0"
	                        android:textColor="@color/white"
	                        android:textSize="16sp"
	                        android:layout_alignParentRight="true" />
	                    
	                </RelativeLayout>
	                
	                <RelativeLayout
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginTop="10dp" >
	                    
	                    <TextView
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="@string/percent_lizhi"
	                        android:textColor="@color/white"
	                        android:textSize="16sp" />
	                    
	                    <TextView
	                        android:id="@+id/rank_detail_lizhi"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="0%"
	                        android:textColor="@color/white"
	                        android:textSize="16sp"
	                        android:layout_alignParentRight="true" />
	                    
	                </RelativeLayout>
	                
	                <RelativeLayout
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginTop="10dp" >
	                    
	                    <TextView
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="@string/percent_hepai"
	                        android:textColor="@color/white"
	                        android:textSize="16sp" />
	                    
	                    <TextView
	                        android:id="@+id/rank_detail_hepai"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="0%"
	                        android:textColor="@color/white"
	                        android:textSize="16sp"
	                        android:layout_alignParentRight="true" />
	                    
	                </RelativeLayout>
	                
	                <RelativeLayout
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginTop="10dp" >
	                    
	                    <TextView
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="@string/percent_zimo"
	                        android:textColor="@color/white"
	                        android:textSize="16sp" />
	                    
	                    <TextView
	                        android:id="@+id/rank_detail_zimo"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="0%"
	                        android:textColor="@color/white"
	                        android:textSize="16sp"
	                        android:layout_alignParentRight="true" />
	                    
	                </RelativeLayout>
	                
	                <RelativeLayout
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginTop="10dp" >
	                    
	                    <TextView
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="@string/percent_bomb"
	                        android:textColor="@color/white"
	                        android:textSize="16sp" />
	                    
	                    <TextView
	                        android:id="@+id/rank_detail_bomb"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="0%"
	                        android:textColor="@color/white"
	                        android:textSize="16sp"
	                        android:layout_alignParentRight="true" />
	                    
	                </RelativeLayout>
	                
	                <RelativeLayout
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginTop="10dp" >
	                    
	                    <TextView
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="@string/percent_fly"
	                        android:textColor="@color/white"
	                        android:textSize="16sp" />
	                    
	                    <TextView
	                        android:id="@+id/rank_detail_fly"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="0%"
	                        android:textColor="@color/white"
	                        android:textSize="16sp"
	                        android:layout_alignParentRight="true" />
	                    
	                </RelativeLayout>
	                
	                <RelativeLayout
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginTop="10dp" >
	                    
	                    <TextView
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="@string/percent_chicken"
	                        android:textColor="@color/white"
	                        android:textSize="16sp" />
	                    
	                    <TextView
	                        android:id="@+id/rank_detail_chicken"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="0%"
	                        android:textColor="@color/white"
	                        android:textSize="16sp"
	                        android:layout_alignParentRight="true" />
	                    
	                </RelativeLayout>
	                
	                <RelativeLayout
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginTop="10dp" >
	                    
	                    <TextView
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="@string/average_bomb"
	                        android:textColor="@color/white"
	                        android:textSize="16sp" />
	                    
	                    <TextView
	                        android:id="@+id/rank_detail_average_bomb"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="0"
	                        android:textColor="@color/white"
	                        android:textSize="16sp"
	                        android:layout_alignParentRight="true" />
	                    
	                </RelativeLayout>
	                
	            </LinearLayout>
	            
	        </LinearLayout>
            
        </LinearLayout>
        
    </ScrollView>

</LinearLayout>
