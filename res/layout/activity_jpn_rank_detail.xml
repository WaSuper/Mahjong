            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        
	        <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:padding="5dp" >
	            
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/history_max_spectrum"
	                android:textSize="20sp"
	                android:textColor="@color/white" />
	            
	            <TextView
	                android:id="@+id/rank_detail_fan"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/fan_yiman"
	                android:textSize="20sp"
	                android:textColor="@color/gold"
	                android:layout_alignParentRight="true" />
	            
			    <com.mahjong.ui.MahjongSpectrum
			        android:id="@+id/rank_detail_spectrum"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_below="@id/rank_detail_fan" />
	            
	        </RelativeLayout>
        
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:padding="5dp" >
	            
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/recent_rank_list"
	                android:textSize="20sp"
	                android:textColor="@color/white" />
	            
			    <com.mahjong.ui.RankChart
			        android:id="@+id/rank_detail_chart"
			        android:layout_width="match_parent"
			        android:layout_height="100dp" />
	            
	        </LinearLayout>
	        
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:padding="10dp" >
	            
	            <LinearLayout
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:orientation="vertical" >
	                
	                <RelativeLayout
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content" >
	                    
	                    <TextView
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="@string/total_battle_count"
	                        android:textColor="@color/white"
	                        android:textSize="16sp" />
	                    
	                    <TextView
	                        android:id="@+id/rank_detail_battle_count"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="0"
	                        android:textColor="@color/white"
	                        android:textSize="16sp"
	                        android:layout_alignParentRight="true" />
	                    
	                </RelativeLayout>
	                
	                <RelativeLayout
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginTop="10dp" >
	                    
	                    <TextView
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="@string/rank_first_data"
	                        android:textColor="@color/white"
	                        android:textSize="16sp" />
	                    
	                    <TextView
	                        android:id="@+id/rank_detail_rank_first"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="0%"
	                        android:textColor="@color/white"
	                        android:textSize="16sp"
	                        android:layout_alignParentRight="true" />
	                    
	                </RelativeLayout>
	                
	                <RelativeLayout
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginTop="10dp" >
	                    
	                    <TextView
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="@string/rank_second_data"
	                        android:textColor="@color/white"
	                        android:textSize="16sp" />
	                    
	                    <TextView
	                        android:id="@+id/rank_detail_rank_second"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="0%"
	                        android:textColor="@color/white"
	                        android:textSize="16sp"
	                        android:layout_alignParentRight="true" />
	                    
	                </RelativeLayout>
	                
	                <RelativeLayout
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginTop="10dp" >
	                    
	                    <TextView
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="@string/rank_third_data"
	                        android:textColor="@color/white"
	                        android:textSize="16sp" />
	                    
	                    <TextView
	                        android:id="@+id/rank_detail_rank_third"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="0%"
	                        android:textColor="@color/white"
	                        android:textSize="16sp"
	                        android:layout_alignParentRight="true" />
	                    
	                </RelativeLayout>
	                
	                <RelativeLayout
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginTop="10dp" >
	                    
	                    <TextView
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="@string/rank_forth_data"
	                        android:textColor="@color/white"
	                        android:textSize="16sp" />
	                    
	                    <TextView
	                        android:id="@+id/rank_detail_rank_forth"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="0%"
	                        android:textColor="@color/white"
	                        android:textSize="16sp"
	                        android:layout_alignParentRight="true" />
	                    
	                </RelativeLayout>
	                
	                <RelativeLayout
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginTop="10dp" >
	                    
	                    <TextView
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="@string/average_rank"
	                        android:textColor="@color/white"
	                        android:textSize="16sp" />
	                    
	                    <TextView
	                        android:id="@+id/rank_detail_rank_average"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="0"
	                        android:textColor="@color/white"
	                        android:textSize="16sp"
	                        android:layout_alignParentRight="true" />
	                    
	                </RelativeLayout>
	                
	                <RelativeLayout
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginTop="10dp" >
	                    
	                    <TextView
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
