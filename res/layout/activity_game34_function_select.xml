<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_default"
    android:orientation="vertical" >
    
    <RelativeLayout        
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/main" >

        <ImageView
            android:id="@+id/game34_select_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:src="@drawable/selector_btn_back" />
        
        <TextView
            android:id="@+id/game34_select_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/game34"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/game34_info"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/information"
            android:layout_alignParentRight="true" />
        
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" >
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal" >
        
	        <ImageButton
	            android:id="@+id/game34_select_btn_battle_entrance"
	            android:layout_width="70dp"
	            android:layout_height="70dp"
	            android:src="@drawable/ic_battle_entrance"
	            android:background="@drawable/selector_bg_function_dark_radius" />
	        
	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:layout_marginTop="3dp"
	            android:text="@string/battle_entrance"
	            android:textColor="@color/white"
	            android:textSize="15sp" />
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:gravity="center_horizontal" >
        
	        <ImageButton
	            android:id="@+id/game34_select_btn_battle_record"
	            android:layout_width="70dp"
	            android:layout_height="70dp"
	            android:src="@drawable/ic_history"
	            android:background="@drawable/selector_bg_function_dark_radius" />
	        
	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:layout_marginTop="3dp"
	            android:text="@string/battle_record"
	            android:textColor="@color/white"
	            android:textSize="15sp" />
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:gravity="center_horizontal" >
        
	        <ImageButton
	            android:id="@+id/game34_select_btn_score_calc"
	            android:layout_width="70dp"
	            android:layout_height="70dp"
	            android:src="@drawable/ic_calculator"
	            android:background="@drawable/selector_bg_function_radius" />
	        
	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:layout_marginTop="3dp"
	            android:text="@string/score_calculator"
	            android:textColor="@color/white"
	            android:textSize="15sp" />
            
        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" >
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal" >
        
	        <ImageButton
	            android:id="@+id/game34_select_btn_ranking_list"
	            android:layout_width="70dp"
	            android:layout_height="70dp"
	            android:src="@drawable/ic_rank"
	            android:background="@drawable/selector_bg_function_dark_radius" />
	        
	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:layout_marginTop="3dp"
	            android:text="@string/ranking_list"
	            android:textColor="@color/white"
	            android:textSize="15sp" />
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:gravity="center_horizontal" >
        
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:gravity="center_horizontal" >
        
            
        </LinearLayout>
        
    </LinearLayout>
    
    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp" />
        
	    <TextView
	        android:layout_weight="3"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"     
	        android:layout_gravity="bottom" 
	        android:gravity="center"
	        android:padding="5dp"
	        android:text="@string/power_by"
	        android:textSize="14sp"
	        android:textColor="@color/white" />
    
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp" />
        
    </LinearLayout>

</LinearLayout>
