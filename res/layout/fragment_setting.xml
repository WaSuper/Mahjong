<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="20dp"
    android:background="@color/transparent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/member_count"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/setting_member_count"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:text="4"
                android:textColor="@color/grey"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" >

	        <View
	            android:layout_width="match_parent"
	            android:layout_height="1px"
	            android:background="@color/diver_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/battle_count"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/setting_battle_count"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:text="@string/battle_two"
                android:textColor="@color/grey"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/setting_rl_groundwind"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:visibility="gone" >

	        <View
	            android:layout_width="match_parent"
	            android:layout_height="1px"
	            android:background="@color/diver_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/windground"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/setting_tv_groundwind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/game17s_groundwind_stay_east"
                android:textColor="@color/grey"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" >

	        <View
	            android:layout_width="match_parent"
	            android:layout_height="1px"
	            android:background="@color/diver_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/base_point"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/setting_basepoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="25000"
                android:textColor="@color/grey"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" >

	        <View
	            android:layout_width="match_parent"
	            android:layout_height="1px"
	            android:background="@color/diver_color" />

            <TextView
                android:id="@+id/setting_lizhi_belong_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/lizhi_belong_to"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/setting_lizhi_belong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/bomb"
                android:textColor="@color/grey"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/setting_rl_enter_sw"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" >

	        <View
	            android:layout_width="match_parent"
	            android:layout_height="1px"
	            android:background="@color/diver_color" />

            <TextView
                android:id="@+id/setting_tv_enter_sw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/enter_south_or_west"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/setting_cb_enter_sw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@drawable/selector_switch" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/setting_rl_fanfu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" >

	        <View
	            android:layout_width="match_parent"
	            android:layout_height="1px"
	            android:background="@color/diver_color" />

            <TextView
                android:id="@+id/setting_tv_fanfu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/FanFu"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/setting_cb_fanfu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@drawable/selector_switch" />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/setting_game17s_rl_fanfu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:visibility="gone" >

	        <View
	            android:layout_width="match_parent"
	            android:layout_height="1px"
	            android:background="@color/diver_color" />

            <TextView
                android:id="@+id/setting_game17s_tv_fanfu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/game17s_FanFu"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/setting_game17s_tv_fanfu_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/game17s_FanFu_five"
                android:textColor="@color/grey"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" >

	        <View
	            android:layout_width="match_parent"
	            android:layout_height="1px"
	            android:background="@color/diver_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/ma_point"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/setting_mapoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="15,5,-5,-15"
                android:textColor="@color/grey"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" >

	        <View
	            android:layout_width="match_parent"
	            android:layout_height="1px"
	            android:background="@color/diver_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/ret_point"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/setting_retpoint"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="5000"
                android:textColor="@color/grey"
                android:textSize="16sp" 
                android:gravity="right|center_vertical"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" >

	        <View
	            android:layout_width="match_parent"
	            android:layout_height="1px"
	            android:background="@color/diver_color" />

            <TextView
                android:id="@+id/setting_tv_dwind4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/double_wind_4"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/setting_cb_dwind4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@drawable/selector_switch" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/setting_rl_zimocut"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:visibility="gone" >

	        <View
	            android:layout_width="match_parent"
	            android:layout_height="1px"
	            android:background="@color/diver_color" />

            <TextView
                android:id="@+id/setting_tv_zimocut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/zimo_cut"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/setting_cb_zimocut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@drawable/selector_switch" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" >

	        <View
	            android:layout_width="match_parent"
	            android:layout_height="1px"
	            android:background="@color/diver_color" />

            <TextView
                android:id="@+id/setting_tv_manguan_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/manguan_up"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/setting_cb_manguan_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@drawable/selector_switch" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" >

	        <View
	            android:layout_width="match_parent"
	            android:layout_height="1px"
	            android:background="@color/diver_color" />

            <TextView
                android:id="@+id/setting_tv_no_fly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/no_fly"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/setting_cb_no_fly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@drawable/selector_switch" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/setting_rl_special_yaku"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" >

	        <View
	            android:layout_width="match_parent"
	            android:layout_height="1px"
	            android:background="@color/diver_color" />

            <TextView
                android:id="@+id/setting_tv_special_yaku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/special_yaku"
                android:textColor="@color/white"
                android:textSize="18sp" />
            
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_btn_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/setting_rl_landscape_mode"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" >

	        <View
	            android:layout_width="match_parent"
	            android:layout_height="1px"
	            android:background="@color/diver_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/landscape_mode"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/setting_cb_landscape_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@drawable/selector_switch" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>