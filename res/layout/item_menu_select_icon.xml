<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/icon_menu_item_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/head_none"
        android:background="@drawable/folder_bg" />

    <ImageView
        android:id="@+id/icon_menu_item_cbox"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:padding="22dp"
        android:src="@drawable/ic_checkbox_circle2_sel"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/icon_menu_item_icon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/icon_menu_item_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="name"
            android:textColor="@color/light_blacktext"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/icon_menu_item_count"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="sign"
            android:textColor="@color/diver_color"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>